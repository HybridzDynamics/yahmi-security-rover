{
  "name": "esp32-surveillance-dashboard",
  "version": "1.0.0",
  "description": "ESP32 Surveillance Car Web Dashboard",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build:css && npm run build:js",
    "build:css": "npm run minify:css",
    "build:js": "npm run minify:js",
    "minify:css": "cleancss -o dist/css/style.min.css css/style.css css/map.css",
    "minify:js": "terser js/*.js -o dist/js/bundle.min.js",
    "test": "jest",
    "lint": "eslint js/",
    "deploy": "npm run build && docker build -t surveillance-dashboard .",
    "deploy:aws": "npm run build && aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin YOUR_ECR_URI && docker tag surveillance-dashboard:latest YOUR_ECR_URI:latest && docker push YOUR_ECR_URI:latest"
  },
  "keywords": [
    "esp32",
    "surveillance",
    "dashboard",
    "iot",
    "security"
  ],
  "author": "ESP32 Surveillance Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "ws": "^8.14.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "firebase-admin": "^11.11.0",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "clean-css-cli": "^5.6.2",
    "terser": "^5.24.0",
    "jest": "^29.7.0",
    "eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
