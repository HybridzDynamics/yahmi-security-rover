# Yahmi Security Rover - Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/yahmi_security_rover
MONGODB_TEST_URI=mongodb://localhost:27017/yahmi_security_rover_test

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=Yahmi Security Rover <noreply@yahmi.com>
ALERT_EMAIL=alerts@yahmi.com

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# File Upload Configuration
MAX_FILE_SIZE=100MB
UPLOAD_PATH=uploads/
TEMP_PATH=temp/

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
SESSION_SECRET=your_session_secret_key_here

# Device Configuration
DEFAULT_DEVICE_IP=192.168.1.100
DEFAULT_DEVICE_PORT=80
DEVICE_TIMEOUT=10000

# AI Configuration
AI_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.5
AI_MODEL_PATH=./models/
AI_PROCESSING_INTERVAL=1000

# Camera Configuration
CAMERA_ENABLED=true
CAMERA_QUALITY=12
CAMERA_RESOLUTION_WIDTH=640
CAMERA_RESOLUTION_HEIGHT=480
CAMERA_FRAME_RATE=30

# Audio Configuration
AUDIO_ENABLED=true
AUDIO_QUALITY=medium
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=2

# Network Configuration
WIFI_SSID=Yahmi-Network
WIFI_PASSWORD=secure_password_123
WIFI_SECURITY=wpa2

# System Configuration
BATTERY_LOW_THRESHOLD=20
BATTERY_CRITICAL_THRESHOLD=10
AUTO_RETURN_HOME=true
HEALTH_CHECK_INTERVAL=300

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/yahmi.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
MONITORING_ENABLED=true
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Cloud Storage Configuration (Optional)
CLOUD_STORAGE_ENABLED=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=yahmi-security-rover

# Google Cloud Configuration (Optional)
GOOGLE_CLOUD_PROJECT_ID=
GOOGLE_CLOUD_KEY_FILE=./config/google-cloud-key.json

# Azure Configuration (Optional)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=yahmi-security-rover

# Webhook Configuration
WEBHOOK_ENABLED=false
WEBHOOK_URL=
WEBHOOK_SECRET=

# API Configuration
API_VERSION=v1
API_RATE_LIMIT=1000
API_TIMEOUT=30000

# CORS Configuration
CORS_ORIGIN=*
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=Content-Type,Authorization

# SSL Configuration (Optional)
SSL_ENABLED=false
SSL_CERT_PATH=./certs/cert.pem
SSL_KEY_PATH=./certs/key.pem

# Development Configuration
DEBUG=false
VERBOSE_LOGGING=false
MOCK_DEVICES=false
SIMULATE_DATA=false